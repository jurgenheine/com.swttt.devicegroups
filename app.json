{
  "id": "heine.jurgen.devicegroupsextended",
  "sdk": 2,
  "permissions": [
    "homey:manager:api"
  ],
  "name": {
    "en": "Device Groups Extended"
  },
  "description": {
    "en": "Makes it possible to group devices and switch all devices within a group.",
    "nl": "Maakt het mogelijk om apparaten te groeperen en te schakelen."
  },
  "category": "tools",
  "tags": {
    "en": ["device", "group", "virtual"],
    "nl": ["apparaat", "groep", "virtueel"]
  },
  "version": "1.1.0",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Bas Jansen",
    "email": "bas@balotti.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Robert Klep",
        "email": "robert@klep.name"
      },

      {
        "name": "Jurgen Heine",
        "email": "jurgen@heine.name"
      }
    ]
  },
  "images": {
    "large": "./assets/images/large.png",
    "small": "./assets/images/small.png"
  },
  "drivers": [{
    "id": "devicegroup",
    "class": "other",
    "capabilities": [],
    "name": {
      "en": "Device group extended"
    },
    "images": {
      "large": "./drivers/devicegroup/assets/images/large.png",
      "small": "./drivers/devicegroup/assets/images/small.png"
    },
    "pair": [
      {
        "id": "class"
      },
      {
        "id": "capabilities",
        "navigation": {
          "next": "devices",
          "prev": "class"
        }
      },
      {
        "id": "devices",
        "navigation": {
          "next": "settings",
          "prev": "capabilities"
        }
      },
      {
        "id": "settings",
        "navigation": {
          "next": "done",
          "prev": "capabilities"
        }
      },
      {
        "id": "done",
        "navigation": {
          "prev": "capabilities"
        }
      }
    ]
  }]
}
